@{
    ViewBag.Title = "快速买单记录";
    ViewBag.appId = Utility.IO.Context.GetRequestInt("appId", 0);
    ViewBag.PageType = Utility.IO.Context.GetRequestInt("pageType", 0);
    Layout = "~/Views/Shared/_MiniappLayout.cshtml";
}

<iframe id='Checkout' style='width:100%;height:800px;background-color:white;border:0px;' src="/Tools/Checkout?appId=@ViewBag.appId"></iframe>

<script type="text/javascript" async>
    $(function () {
        $('#Checkout').load(function () {
            $('#Checkout').contents().find("head")
           .append($("<style type='text/css'>.gray-bg{background-color:#ffffff;} </style>"));
        });
    })
</script>

