<script>
    var FoodId =@(ViewBag.FoodId);
    $(function () {
        //编辑规格
        $(document).on("click", ".temp-btn-setting", function () {
            var canadd = 1;
            $.ajax({
                type: "Post",
                url: "/foods/GetFoodGoodAttrCanAdd",

                data:
                    {
                        storeid:FoodId,
                    },
                success: function (data) {
                    if (!data.isok) {
                        layer.alert(data.msg);
                        canadd = 0;
                    }
                }
            });
            if(canadd == 0) {return;}
            //一修改名称
            var $thisobj = $(this);
            var title = $thisobj.attr("data-name");
            var itemid = $thisobj.attr("data-itemid");
            layer.open({
                title: "",
                content: $("#id_attrtitle").html().replace("{#name#}",title),
                btn: ["保存", "取消"],
                yes: function () {
                    var _title = $("#nameVal").val().replace(/(^\s*)|(\s*$)/g, "");
                    if (_title == "") {
                        alert("请输入规格名称");
                        return;
                    }
                    $.ajax({
                        type: "Post",
                        url: "/foods/AddFoodAttrList",
                        data:
                            {
                                appId:@(ViewBag.appId),
                                AttrName:_title,
                                FoodId:FoodId,
                                Id:itemid
                            },
                        success: function (data) {
                            if (data.isok) {
                                layer.alert("保存成功");
                                window.location.reload();
                            }
                            else {
                                layer.alert(data.msg);
                            }
                        }
                    });
                },
                no: function () { layer.closeAll(); },
                cancel: function () {
                    layer.closeAll();
                }
            })
        }).on("click",".temp-btn-del",function(){
            var $thisobj = $(this);
            var title = $thisobj.attr("data-name");
            var itemid = $thisobj.attr("data-itemid");
            layer.open({
                title: "删除确认",
                content: "确定要删除该规格么？",
                btn: ["确定", "取消"],
                yes: function () {
                    var _title =title;
                    $.ajax({
                        type: "Post",
                        url: "/foods/AddFoodAttrList",
                        data:
                            {
                                appId:@(ViewBag.appId),
                                AttrName:_title,
                                FoodId:FoodId,
                                Id:itemid,
                                State:-1
                            },
                        success: function (data) {
                            if (data.isok) {
                                layer.alert("保存成功");
                                window.location.reload();
                            }
                            else {
                                layer.alert(data.msg);
                            }
                        }
                    });
                }
            })
        });
    });
