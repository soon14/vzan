    <script>

    //查看大图
    $('.clicklockbigimg').on('click', function () {
        $("#testqrcodeimg").attr("src", $(this).data("url"));
        $("#testqrcodModal").show();
    });

    $(".delQrcode").on('click', function () {
        if(confirm("你确定要删除这张桌台吗?"))
        {
            $.ajax({
                type: "Post",
                url: "/foods/delAppQrcordNo",
                data:
                    {
                        tablenoid : $(this).data("id")
                        //LogImg: imgUrl,
                    },
                success: function (data) {
                    if (data.isok) {
                        layer.alert(data.msg, {closeBtn: 0 ,yes:function(){
                            window.location.reload();
                        }
                        });
                    }
                }
            });
        }
    });
    $('#closetestqrcode').on('click', function () {
        $("#testqrcodModal").hide();
    });
    function addTablesNo()
    {
        $("#nameVal").val("");
        $('#addModal').modal('show');
    }
    $('#btnAdd').on('click', function() {
        //一修改名称
        var itemid = $("#nameVal").val();
        if (itemid == "") {
            alert("请输入桌台号");
            return;
        }
        var reg = /^[0-9]+$/ ;
        if(!reg.test(itemid))
        {
            alert("请输入1~99999的整数");
            return;
        }
        if(itemid < 1 || itemid > 99999)
        {
            alert("请输入1~99999的整数");
            return;
        }

        $(this).attr('disabled', 'disabled');

        $.ajax({
            type: "Post",
            url: "/foods/addTables",
            data:
                {
                    appId:@(ViewBag.appId),
                    tablesNo:itemid,
                    //LogImg: imgUrl,
                },
            success: function (data) {
                if (data.isok) {
                    layer.alert(data.msg, {closeBtn: 0 ,yes:function(){
                        window.location.reload();
                    }
                    });


                }
                else {
                    $("#btnAdd").removeAttr("disabled");
                    layer.alert(data.msg);
                }
            }
        });
    });

    // #endregion

    // #region 删除图片
    function removeAttachmentFunction(file) {
        if (file && file.id) {
                // 删除Logo
                $.get('/foods/DeleteImg?id=' + file.id,
                    function (data) {
                        if (!data.Success) {
                            AppTools.Alert("网络不好 , 删除失败 , 请稍后重试 !");
                            return e.ee;
                        }
                    });
        }
    }
    // #endregion
    

    </script>
