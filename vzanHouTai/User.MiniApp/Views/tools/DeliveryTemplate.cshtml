                </el-table-column>
                <el-table-column label="使用中的商品">
                    <template scope="scope">
                        <a @@click="editProduct(scope.row)">{{scope.row.ApplyCount? '查看商品(' + scope.row.ApplyCount + ')' : '无'}}</a>
                    </template>
                </el-table-column>
                <el-table-column label="更新时间">
