<div id="appHolder">
    <delivery-app v-bind:set_enable="@((enable.HasValue && enable.Value > 0).ToString().ToLower())"
                  v-bind:set_sum_rule="@rule"
                  set_pagetype="@pageType"
                  set_appid="@Model.Id"
                  set_append_para="@appendQueryPara"
                  set_discount="@(config.Attr.Discount * 0.01)"
