                                         v-bind:props="{key: 'Code',label: 'Name'}"
                                         v-bind:titles="['剩余省份/直辖市', '已选省份/直辖市']"
                                         v-bind:button-texts="['取消', '全选']"
                                         v-model="selectedRegion"
                                         v-bind:data="regionRemain">
                            </el-transfer>
                        </el-tab-pane>
