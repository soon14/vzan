                            </a>
                        }
                        else
                        {
                            <a @@click="addTempate();templateTab = 'basic'" href="javascript:;" class="btn btn-success temp-btn-setting" style="background-color:#337ab7;border-color:#337ab7">
                                <i class="layui-icon">&#xe61f;</i>添加运费模板
                            </a>
                        }
