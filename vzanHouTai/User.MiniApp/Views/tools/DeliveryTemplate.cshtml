                    {
                        <el-tab-pane label="按重量" name="@((int)DeliveryUnit.重量)"></el-tab-pane>
                    }
                </el-tabs>
            </div>

            <el-table v-bind:data="templates" v-loading="isloading" stripe border style="width:100%">
