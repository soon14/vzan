                                    <el-card v-bind:body-style="{ padding: '5px' }">
                                        <div slot="header" class="card-clearfix">
                                            <span>操作</span>
                                            <el-button @@click="removeRegion(region)" style="float: right; padding: 3px 3px;color:#ed6b75" type="text">删除</el-button>
