<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" style="background-color: white;">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=7,IE=8,IE=9" />
    <meta name="author" content="vzan" />
    <meta name="Copyright" content="vzan.com" />
    <meta name="Keywords" content="@ViewBag.Keywords" />
    <meta name="Description" content="@ViewBag.Description" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="@(WebSiteConfig.cdnurl)content/newhome/image/bitbug_favicon.ico">
    <link href="@(WebSiteConfig.cdnurl)content/newhome/css/dzbase.css?@WebSiteConfig.cdnVersion" rel="stylesheet" />
    @*<link href="@(WebSiteConfig.cdnurl)content/newhome/css/base.css?@WebSiteConfig.cdnVersion" rel="stylesheet" />*@
    <link href="/Content/assets/global/plugins/dropzone/dropzone.css" rel="stylesheet" />
    <link href="/Content/assets/global/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/Content/assets/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="/Content/assets/global/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />

    @RenderSection("css", false)

    @if (ViewBag.PageType != 0)
    {
        <link href="/Content/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="@WebSiteConfig.MiniappZyUrl/css/layout.min.css" rel="stylesheet" type="text/css" />
        <link href="@WebSiteConfig.MiniappZyUrl/css/light2.min.css" rel="stylesheet" type="text/css" id="style_color" />

        <style>
            td { word-break: break-all; word-wrap: break-word; border-top: none !important; margin: 0px 10px; }

            .width400 { width: 400px !important; }
        </style>
    }
    @if (ViewBag.PageType == (int)TmpType.小程序行业模板 ||
                                                ViewBag.PageType == (int)TmpType.小程序专业模板 ||
                                                ViewBag.PageType == (int)TmpType.小程序多门店模板)
    {
        <link href="@(WebSiteConfig.cdnurl)content/enterprise/css/main.css?@WebSiteConfig.cdnVersion" rel="stylesheet" />
    }
    <link rel="stylesheet" type="text/css" href="@WebSiteConfig.MiniappZyUrl/layui/css/layui.css?v=1" />
    <style>
        .contentcontainer { margin-top: 0px !important; }

        .contentcontainer li { text-align: left; }
        /*html, body, .rightheight { height: 100%; }*/

        body { background-color: #f5f5f5; font-family: "微软雅黑"; }

        a { color: #337ab7; text-decoration: none; }
        /*分页样式*/
        .page { background: #fff; padding: 0 10px; margin-top: 12px; font-size: 12px; }

        .page a { padding: 4px 10px; border: 1px solid #cce6f5; margin: 0 4px; color: #198dd2; }

        .page a:hover { background: #198dd2; color: #fff; border: 1px solid #198dd2; }

        ul.page { height: 30px !important; padding-top: 0 !important; }

        .contentcontainer { margin-top: 0px !important; }

        #dropdown > a { text-decoration: underline; font-size: 16px; color: #fff; margin-right: 20px; padding: 5px; }
        /*.layui-layer-shade { z-index: 1000000 !important; }*/
        /*.layui-layer-dialog { z-index: 1000001 !important; }*/
        .nobr { white-space: nowrap; }

        [v-cloak] { display: none; }

        .panel-body:after, .panel-body:before { display: inline; }
    </style>

    <!--工具方法-->
    @*<script src="@(WebSiteConfig.cdnurl)content/enterprise/utils.js"></script>*@
    <script src="~/Content/enterprise/utils.js"></script>
    <script src="@WebSiteConfig.MiniappZyUrl/js/jquery.min.js"></script>
    <script src="@(WebSiteConfig.cdnurl)content/jsPolyfill/Polyfill.js?v=@WebSiteConfig.cdnVersion"></script>
    <script src="@WebSiteConfig.MiniappZyUrl/layer/layer.js"></script>
    @if (WebSiteConfig.Environment == "pro")
    {
        <script src="@WebSiteConfig.MiniappZyUrl/js/vue.min.js"></script>
    }
    else
    {
        <script src="@WebSiteConfig.MiniappZyUrl/js/vue.js"></script>
    }
    <script src="@(WebSiteConfig.cdnurl)content/assets/global/plugins/bootstrap/js/bootstrap.js"></script>
    <script src="@WebSiteConfig.MiniappZyUrl/layui/layui.js"></script>
    <script src="@(WebSiteConfig.cdnurl)content/assets/global/plugins/dropzone/dropzone.js?n=1234522222"></script>

    <script src="@(WebSiteConfig.cdnurl)content/assets/global/scripts/app.min.js" type="text/javascript"></script>
    <script src="@(WebSiteConfig.cdnurl)content/assets/layouts/layout/scripts/layout.min.js" type="text/javascript"></script>

    <script src="@(WebSiteConfig.cdnurl)content/assets/global/plugins/bootstrap-colorpicker/bootstrap-clockpicker.min.js"></script>
    <script src="@(WebSiteConfig.cdnurl)content/assets/global/plugins/bootbox/bootbox.min.js"></script>
    <script src="@(WebSiteConfig.cdnurl)content/assets/global/scripts/appTools.js"></script>
    <script src="@(WebSiteConfig.cdnurl)content/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="@(WebSiteConfig.cdnurl)content/assets/global/plugins/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script>
    <script src="@(WebSiteConfig.cdnurl)js/jquery.cookie.js"></script>
</head>
<body style="background-color: white;">
    @RenderPage("~/Views/Shared/_TopNav.cshtml")
        @RenderPage("~/Views/Shared/_MenuNav.cshtml")
    <div class="w main">
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <div class="jkn_footer">
        @RenderPage("~/Views/Shared/_FootNav.cshtml")
    </div>
    @RenderSection("script", false)
</body>
</html>
