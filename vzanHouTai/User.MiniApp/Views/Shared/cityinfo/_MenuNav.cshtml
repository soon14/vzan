<style>
    .jkn_navigation {
        width: auto;
        height: 43px;
        line-height: 43px;
        color: #fff;
        position: relative;
    }

    .jkn_nav_r {
        position: relative;
        z-index: 2;
        list-style-type: none;
        height: 43px;
    }

        .jkn_nav_r li {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        .jkn_nav_r li {
            float: left;
            font-size: 18px;
            font-family: \5fae\8f6f\96c5\9ed1,\9ed1\4f53;
        }

            .jkn_nav_r li a {
                width: 120px;
                font-size: 18px;
                color: #fff;
                display: block;
                padding: 0 13px;
                _padding: 0 12px;
                border: 2px solid #3FD5C0;
                border-bottom: none;
                border-top: none;
                text-align: center;
                text-decoration: none;
            }
</style>
<div class="costom-nav" style="background-color:#3FD5C0;">
    <div class="row" style="margin-left: 0;margin-right: 0;">
        <div class="col-lg-2"></div>
        <div class="jkn_navigation">
            <!--横条导航开始-->
            <ul class="jkn_nav_r">
                <li><a href="@System.Configuration.ConfigurationManager.AppSettings["DomainUser"]/member/default" title="用户中心首页">首页</a></li>
                <li><a href="/@System.Configuration.ConfigurationManager.AppSettings["DomainUser"]article/index" title="微赞论坛">微赞论坛</a></li>
                <li><a href="@System.Configuration.ConfigurationManager.AppSettings["DomainFriend"]/tryst/index" title="微赞有约">微赞有约</a></li>
                <li><a href="@System.Configuration.ConfigurationManager.AppSettings["DomainLive"]/live/s" title="微赞直播">微赞直播</a></li>
                <li><a href="@System.Configuration.ConfigurationManager.AppSettings["DomainCity"]/cityinfo/index" title="微赞同城">微赞同城</a></li>
                <li><a target="_blank" href="http://vzan.com/shop" title="微赞好店">微赞好店</a></li>
                <li><a href="@System.Configuration.ConfigurationManager.AppSettings["DomainUser"]/statpush/index" title="论坛统计">论坛统计</a></li>
                <li><a href="http://www.vzan.com/f/s-1?typeId=875" target="_blank" title="用户手册">用户手册</a></li>
            </ul>
            <!--横条导航结束-->
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.jkn_nav').css('background-color', '#3fd5c0');
        $($('.jkn_nav_r li a').eq(4)).css('background-color', '#00af96').addClass('itemon');
        $('.jkn_nav_r li a').css('border-color', '#3fd5c0')
            .hover(
            function () { $(this).css('background-color', '#00af96') },
            function () {
                if (!$(this).hasClass("itemon")) {
                    $(this).css('background-color', '#3fd5c0');
                }
            });
    })
</script>