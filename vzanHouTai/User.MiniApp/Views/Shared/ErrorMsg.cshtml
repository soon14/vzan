@model Return_Msg
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>错误</title>
</head>
<body>
    @if (Model == null)
    {
        <div style="padding: 20px 0 10px 0; text-align: center;">
            <h2>抱歉，处理您的请求时出错。</h2>
        </div>
    }
    else
    {
        <div style="padding: 20px 0 10px 0; text-align: center;">
            <h2>@Model.Msg</h2>
            <h2><a href="/">返回</a></h2>
        </div>
    }
</body>
</html>
