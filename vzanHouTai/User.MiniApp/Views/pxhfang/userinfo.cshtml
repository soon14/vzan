    </div>
    <script>
        var vm = new Vue({
            el: "#app",
            data: {
                recordCount: 0,
                postdata: {
                    pageIndex: 1,
                    pageSize: 12,
                    type:0,
                },
                dataList: [],
                isloading: false
            },
            methods: {
                GetDataList: function () {
                    if (this.isloading) {
                        layer.msg("正在加载");
                        return;
                    }
                    this.isloading = true;
                    $.post("/pxhfang/GetAgentinfoCaseList", this.postdata, function (data) {
                        vm.isloading = false;
                        if (!data.isok) {
                            layer.msg("数据异常");
                            return;
                        } else {
                            vm.recordCount = data.dataObj.count;
                            vm.dataList = data.dataObj.list;
                        }
                    })
                },
            },
            created: function (index) {
                $("#app").show();
                this.GetDataList();
            }
        })
    </script>
