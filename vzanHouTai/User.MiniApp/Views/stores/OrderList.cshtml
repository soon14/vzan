                    <option value="-999" @(ViewBag.curState == -999 ? "selected" : "")>全部</option>
                    @foreach (var item in Enum.GetValues(typeof(OrderState)))
                    {
                        <option value="@((int)item)" @(ViewBag.curState == (int)item ? "selected" : "")>@item.ToString()</option>
                    }
