                + "&userName=" + $("#userName").val()
                + "&vipLevelId=" + $("#vipLevelId").val()
                + "&state=" + $("#curState").val()
                + "&export=true";
                layer.closeAll();
            },
        })
    }
    function ConfirmExportAllData() {
        layer.open({
            title: '导出流水报表',
            btn: ["确定", "取消"],
            content: "确定导出所有订单吗？<br/><单据数量越多响应时间越长>",
            yes: function () {
                window.location.href = "/stores/OrderList?appId=@ViewBag.appId&export=true";
                layer.closeAll();
            },
        })
    }


</script>
