@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewBag.Title = "代理加盟";
}
@section cssSection{
    <link href="@(WebSiteConfig.cdnurl)content/newhome/css/agent.css" rel="stylesheet" />
}

<div class="home-content">
    <!--轮播图-->
    <div class="swiper-container">
        <div class="swiper-wrapper">
            @*<div class="swiper-slide">
                    <img src="/newhome/image/banner-home-03.jpg" class="banner-img" />
                    <div class="banner-btn-box font-color-gray f fc fj">
                        <a id="btnFreeReg" class="btn-freeReg" href="/dzhome/wxReg">免费注册</a>
                        <a id="btnScanCode" class="btn-scanCode" href="javascript:;" onclick="OpenFreeTemplate(4)">扫码体验</a>
                    </div>
                </div>*@
            @*<div class="swiper-slide">
                    <img src="/content/newhome/image/banner-activity.jpg" class="banner-img" />
                    <div class="btn-activity" id="btnApply"></div>
                </div>*@
            <div class="swiper-slide">
                <img src="@(WebSiteConfig.cdnurl)content/newhome/image/banner-home.png" class="banner-img" />
                <div class="btn-banner font-color-gray f fc fc-h" id="btnBanner">立即咨询</div>
            </div>
        </div>
        <!-- 分页器 -->
        @*<div class="swiper-pagination"></div>*@
    </div>

    <!-- 内容 --->
    <section>
        <!-- 加入我们 -->
        <div class="join-us rv">
            <img src="@(WebSiteConfig.cdnurl)content/newhome/image/joinUs.png" />
        </div>

        <!-- 发展瓶颈 -->
        <div class="development f fv fc">
            <div class="development-title">
                <h2 class="font-size-52 font-color-gray">平台发展瓶颈</h2>
            </div>
            <div class="development-content f fc-h">
                <div class="development-img rv">
                    <img src="@(WebSiteConfig.cdnurl)content/newhome/image/Website2.png" />
                </div>
                <div class="development-page font-color-yellow font-size-24">
                    <p class="development-page-details rv">平台流量增长面临瓶颈! 商家推广成本越来越高、竞争越来越激烈，抽成越来越高；大商家增长难，小商家存活难！</p>
                    <p class="development-page-focus font-size-30 font-bold rv">商家给平台打工的命运已经注定！</p>
                </div>
            </div>
        </div>

        <!-- 目前 -->
        <div class="now f fv fc">
            <div class="now-title">
                <h2 class="font-color-blue font-size-52">目前</h2>
            </div>
            <ul class="now-content-list f fw fj">
                <li class="rv">
                    <img src="@(WebSiteConfig.cdnurl)content/newhome/image/icon-home01.png" style="width:6.25rem;"/>
                    <p class="font-size-24 font-bold">小程序的<span>用户</span>已经悄悄达到<span>5个亿</span></p>
                </li>
                <li class="rv">
                    <img src="@(WebSiteConfig.cdnurl)content/newhome/image/icon-home02.png" style="width:6.25rem;"/>
                    <p class="font-size-24 font-bold">微信已经给小程序开放<span>42个流量入口</span></p>
                </li>
                <li class="rv">
                    <img src="@(WebSiteConfig.cdnurl)content/newhome/image/icon-home03.png" style="width:6.25rem;"/>
                    <p class="font-size-24 font-bold"><span>越来越多</span>的<span>商家</span>开始<span>创建</span>自己的<span>小程序</span></p>
                </li>
                <li class="rv">
                    <img src="@(WebSiteConfig.cdnurl)content/newhome/image/icon-home04.png" style="width:6.25rem;"/>
                    <p class="font-size-24 font-bold">有<span>大量</span>小程序<span>建站服务商</span>已经赚到<span>第一桶金</span></p>
                </li>
            </ul>
        </div>

        <!-- 建站 -->
        <div class="building f fv fc">
            <div class="building-title rv">
                <h2 class="font-color-gray font-size-52">小程序建站市场</h2>
            </div>
            <div class="building-content f fc fj">
                <div class="building-img rv">
                    <img src="@(WebSiteConfig.cdnurl)content/newhome/image/building-table.png" />
                </div>
                <div class="building-page f fv fj">
                    <p class="page font-color-gray font-size-24 rv">小程序建站市场是2013年公众号建站机会 重现，但是公众号建站的100倍市场。</p>
                    <p class="page font-color-gray font-size-24 rv">小程序建站市场是2000年互联网建站机会 重现，但是互联网建站的10倍市场。</p>
                    <p class="font-color-gray font-size-30 font-bold rv" style="line-height:1.2em;">谁有先发优势！谁就能抢到未来 至少5年的红利！</p>
                </div>
            </div>
        </div>

        <!-- 入局小程序 -->
        <div class="prospect f fv fc">
            <div class="prospect-title rv">
                <h2 class="font-size-52 font-color-blue ">如何入局小程序</h2>
            </div>
            <ul class="prospect-content-list f fj">
                <li class="f fj rv">
                    <div class="f fv fc fc-h">
                        <img src="@(WebSiteConfig.cdnurl)content/newhome/image/icon-home03.png" style="width:6.25rem;"/>
                    </div>
                    <div class="prospect-content-page ">
                        <h3 class="font-size-36 font-color-blue">商家</h3>
                        <p class="font-size-24">商家做小程序的第一件事——小程序建站！</p>
                    </div>
                </li>
                <li class="f fj rv">
                    <div class="f fv fc fc-h">
                        <img src="@(WebSiteConfig.cdnurl)content/newhome/image/icon-home05.png" style="width:6.25rem;" />
                    </div>
                    <div class="prospect-content-page ">
                        <h3 class="font-size-36 font-color-blue">服务商</h3>
                        <p class="font-size-24">成为小程序建站服务商，勇夺未来10年建站需求红利</p>
                    </div>
                </li>
            </ul>
            <p class="prospect-page-focus font-size-30 font-bold font-color-blue">成为小程序建站服务商就选小未程序</p>
        </div>

        <!-- 优势 -->
        <div class="translate f fv fc">
            <div class="translate-title">
                <h2 class="font-size-52 font-color-gray">小未程序优势</h2>
            </div>
            <div class="translate-content f fv fc">
                <p class="font-size-24 font-color-gray rv"><span>全案的</span>小程序<span>直销、会销套路</span>支持让你在代理的第一周就迅速盈利</p>
                <p class="font-size-24 font-color-gray rv"><span>18个行业模板</span>让你承包本地建站小程序90%的市场</p>
                <p class="font-size-24 font-color-gray rv"><span>破坏性的拿货成本</span>让你在竞争中永远处于不败之地</p>
                <p class="font-size-24 font-color-gray rv"><span>比管理qq空间更容易的后台，</span>操作令你爱不释手</p>
                <p class="font-size-24 font-color-gray rv"><span>总部每月60万的广告投放，</span>给你强大的终端客户输送，让你躺着赚钱</p>
                <span class="translate-content-focus font-size-36 font-bold rv">小未程序5大支持让你一年大赚1000万</span>
            </div>
        </div>
        <!-- 提交信息 -->
        <div class="submit f fv fc" id="submit">
            <div class="submit-title rv">
                <h2 class="font-size-52 font-color-blue">提交信息<span class="font-color-yellow">获得</span></h2>
            </div>
            <div class="submit-content f fc fv">
                <div class="submit-content-page font-size-24 font-color-blue rv">
                    <p>1.最具破坏力的代理方案!</p>
                    <p>2.首份小程序行业报告!</p>
                    <p>3.大量深度解读小程序的精品视频!</p>
                    <p>4.专业客服的一对一辅导!</p>
                </div>
                <div class="submit-input f fj rv">
                    <input class="contacts" name="name" type="text" placeholder="填写你的姓名" />
                    <input class="contacts-phone" name="phone" type="text" placeholder="填写你的手机号码" />
                </div>
                <div class="submit-btn font-size-36 font-color-gray f fc-h fc rv" id="btnSubmit" data-page="agent">提交</div>
            </div>
        </div>
    </section>

</div>
@section script{
    <script src="@(WebSiteConfig.cdnurl)content/newhome/js/agent.js"></script>
}
