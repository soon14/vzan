@section script{
    <script>

        $(function () {
            var aboutSwiper = new Swiper('.swiper-container', {
                autoplay: {
                    delay: 1000,
                    disableOnInteraction: false
                },
                speed: 800,
                grabCursor: true,
                pagination: {   //分页器
                    el: '.swiper-pagination',
                    type: 'custom',
                    renderCustom: function (swiper, current, total) {
                        var customPaginationHtml = "";
                        for (var i = 0; i < total; i++) {
                            if (i == (current - 1)) {
                                customPaginationHtml += '<span class="swiper-pagination-customs swiper-pagination-customs-active"></span>';
                            } else {
                                customPaginationHtml += '<span class="swiper-pagination-customs"></span>';
                            }
                        }
                        return customPaginationHtml;
                    }
                },
            })
            $("#btnSeeVideo").on("click", function () {
                $("#videoMasking").show();
                $("video").attr("src", "http://vzan-img.oss-cn-hangzhou.aliyuncs.com/upload/video/20180316/9e8f7a44ed4849b7ac20723891b80bd2.mp4").trigger("play");
            })
            $("#videoMasking").on("click", function () {
                $("video").trigger("pause");
                $(this).hide();
            })

            $("#aboutOptions>li").on("click", function () {
                $("#aboutOptions>li").removeClass("active");
                $(this).addClass("active");
                var index = $(this).index();
                $(".about-content").hide();
                $(".about-content").eq(index).show();
            })

            $("#yearList>p").on("click", function () {
                $("#yearList>p").removeClass("active");
                $(this).addClass("active");
                var index = $(this).index();
                $(".month-list").hide();
                $(".month-list").eq(index).show();
            })

        })

    </script>
}
