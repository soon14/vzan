                            <br />
                            <div class="text-info" style="font-size:14px;">
                                如果您已经在小程序端开通了店铺 <br />
                                账号默认为您的手机号码<br />
                                密码默认是123456 <br />
                                请尽快登陆系统修改密码
                            </div>
                        </li>
                    </ul>
                </div>
            </form>
            <span class="c1"></span>
            <span class="c2"></span>
            <span class="c3"></span>
        </div>
    </div>

</body>




@section scripts{
    <script type="text/javascript">
        $(function () {

            //表单验证
            $("#post-form").validate({
                rules: {
                    loginname: {
                        required: true,
                    },
                    password: {
                        required: true
                    },
                    //verify: {
                    //    required: true
                    //}
                },
                messages: {
                    loginname: {
                        required: "请输入用户名"
                    },
                    password: {
                        required: "请输入密码"
                    },
                    //verify: {
                    //    required: "请输入验证码"
                    //}
                },
                onkeyup: false,
                //focusCleanup: true,
                success: "valid",
                submitHandler: function (form) {
                    var l_index = layer.msg('数据提交中');
                    $("#submit_button").attr("disabled", true);
                    $(form).ajaxSubmit({
                        dataType: "json",
                        success: function (data) {
                            $("#submit_button").attr("disabled", false);
                            layer.close(l_index);
                            if (data.code == 0) {

                                layer.msg(data.msg, { time: 1000 });
                            } else {
                                layer.msg('登陆成功', function () {
                                    var url = window.location.host;
                                    var domain = "";
                                    if (url.indexOf("www.") != -1) {
                                        domain = url.replace("www.", ".");
                                    }
                                    else {
                                        domain = "." + url;
                                    }

                                    $.cookie("dzPinAdmin", data.msg, {
                                        expires: 7,
                                        path: '/',
                                        domain: domain
                                    });
                                    setTimeout(function () {
                                        window.location = "/PinAdmin/main/index?aId=" + data.obj.aId + "&storeId=" + data.obj.storeId;
                                    }, 1000);
                                })

                            }
                        }
                    });
                }
            });

        });
    </script>
}
