/* pages/chatroom/chatroom.wxss */

.visitor {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 8vh;
  background:#fffeee;
  /* width: 98%;
  height: 40px;
  background: #fffeee;
  margin: 1rpx auto; */
}

.visitor image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-top: 6rpx;
  margin-right: -16rpx;
  float: left;
}

.more-visitor {
  color: #999;
  line-height: 80rpx;
  font-size: 28rpx;
  float: left;
}

.more-text {
  float: right;
  font-size: 30rpx;
  color: #ff5777;
  line-height: 33px;
}

.input-box {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 9vh;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 22rpx;
  background-color: #eee;
  justify-content: space-between;
  /* width: 100%;
  height: 48px;
  background: #eee; */
}

.context {
  display: flex;
  flex-direction: column;
  height: 83vh;
  margin-top: 8vh;
  width: 100%;
}

.input-text {
  width: 76%;
  /* flex: 1; *//* width: 270px; */
  border: 1px solid #ccc;
  /* margin-right: 10px; */
  background: #fff;
  /* margin: 7px 0 0 10px; */
  padding: 10rpx;
  border-radius: 8rpx;
  float: left;
}

.send-btn {
  /* float: right; *//* margin: 6px 12px 0px 0px; */
  height: 70rpx;
  color: #fff;
  background: #fc2246;
  font-size: 30rpx;
  line-height: 70rpx;
}

.send-btn-hover {
  background: #ff5777;
}

.placeholders {
  color: #ff5777;
}

.system-view {
  text-align: center;
  font-size: 24rpx;
  padding: 13rpx;
}

.system-msg {
  background: #ccc;
  opacity: 0.8;
  color: #fff;
  padding: 7rpx 18rpx;
  border-radius: 14rpx;
}
.right-headImg{
   width: 35px;
  height: 35px;
  margin-top: 3px;
  margin-right: 8px;
  border-radius: 3px;
  float: right;
}
.left-headImg{
   width: 35px;
  height: 35px;
  margin-top: 3px;
  margin-left: 8px;
  border-radius: 3px;
  float: left;
}