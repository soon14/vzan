@import "../../public/iconfont.wxss";

.header {
  background-color: #f20033;
  color: #fff;
  padding: 30rpx 20rpx;
  font-size: 26rpx;
  line-height: 2;
}

.header-l {
  padding-right: 20rpx;
}

.header .dzicon {
  font-size: 60rpx;
}

.order-group {
  padding-left: 20rpx;
}

.order-group .title {
  font-size: 30rpx;
  color: #121212;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.group-info {
  padding: 20rpx;
  padding-left: 0;
}

.group-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.group-img  image{width: 160rpx;height: 160rpx;}
.group-price {
  color: #f20033;
}

.jia, .jian {
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
  justify-content: center;
  line-height: normal;
  font-size: 36rpx;
  border: 1rpx solid rgba(242, 0, 51, 1);
}

.jia {
  color: #fff;
  background-color: rgba(242, 0, 51, 1);
}

.jian {
  color: rgba(242, 0, 51, 1);
}

.order-num {
  min-width: 50rpx;
  justify-content: center;
  color: #f20033;
}

.bottomBar{position: fixed;bottom: 0;width: 100%;padding-left: 20rpx;}
.bottomBar text{color:rgba(242,0,51,1);}
.btn-pay {
  width: 300rpx;
  height: 100rpx;
  background: rgba(239, 0, 0, 1);
  text-align: center;
  color: #fff;
  line-height: 100rpx;
  border-radius: 0;
}
