 .btn-invite{width: 310rpx;height: 70rpx;text-align: center;line-height: 70rpx;background-color: #FF9A37;font-size: 32rpx;
 color: #fff;border-radius: 10rpx;margin: 0 auto; margin-top: 60rpx;}

  .btn-normal{width: 310rpx;height: 70rpx;text-align: center;line-height: 70rpx;font-size: 32rpx;
