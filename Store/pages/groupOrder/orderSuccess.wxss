@import "../../public/iconfont.wxss";

.orderSuccess{text-align:center;padding-top: 60rpx;}
.icon-zhifuchenggong{font-size: 140rpx;color: #09bb07;}

.bg1{
  width: 650rpx;height: 510rpx;margin: 0 auto;margin-top: 40rpx;
