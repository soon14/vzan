@import "../goodsList/goodsList.wxss";

body {
  background-color: #f3f3f3;
  font-family: PingFang-SC-Medium;
}

/* header */

.header {
  height: 428rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.header_content {
  height: 140rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.header_contentright {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #888;
  justify-content: space-between;
}
/* 注 */
.takecare{
  height: 201rpx;
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding:  0 34rpx 0 22rpx;
  padding-top: 20rpx;
}
.takecare text{
  color: #999999;
  font-size: 24rpx;
  line-height: 40rpx;
}

/* 分类导航标题 */

.navigation {
  justify-content: center;
  margin-top: 35rpx;
  font-size: 34rpx;
  color: #f20033;
  display: flex;
  align-items: center;
}

.navigation_point {
  width: 20rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #f20033;
}

/* 跳转按钮 */
.navtoUrl{
  height: 100rpx;
  background-color: white;
  width: 50%;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  border-top: 1rpx solid #dcdcdc;
}