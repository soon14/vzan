/* pages/orderList/orderList.wxss */

/* header */

.header {
  height: 244rpx;
  background-color: #f20033;
  color: white;
  padding: 0 84rpx 0 23rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  word-break: break-all;
}

.header_icon {
  width: 16rpx;
  height: 24rpx;
  position: absolute;
  top: 112rpx;
  right: 24rpx;
}
.timedetail{
  display: flex;
}
.header view {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  align-items: center;
}

/* body1 */

.body1 {
  background-color: white;
}

.body1_shopList {
  height: 100rpx;
  margin-left: 22rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.body1_shopList text {
  color: #f20033;
  font-size: 28rpx;
}

.body2 {
  align-items: center;
  height: 221rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-left: 22rpx;
  display: flex;
  padding-right: 29rpx;
}

.body2_img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 22rpx;
  flex-shrink: 0;
  background-color: white;
}
.body2_content {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 160rpx;
  justify-content: space-between;
}

.body2_content text {
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #111;
  overflow: hidden;
}

.body2_content1 {
  display: flex;
  color: #666;
  justify-content: space-between;
}

.body2_content1 text {
  color: #666;
}

.body2_content2 {
  display: flex;
  justify-content: space-between;
}

.body2_content2 text {
  color: #f20033;
}

/* 选项 */

.body3 {
  background-color: white;
  margin-top: 20rpx;
}

.body3_choose {
  display: flex;
  padding-right: 26rpx;
  align-items: center;
  margin-left: 22rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #f0f0f0;
  justify-content: space-between;
}

.picker {
  align-items: center;
  font-size: 28rpx;
  display: flex;
  color: rgba(102, 102, 102, 1);
}

.body3_choose_text {
  font-size: 32rpx;
  color: #121212;
}

/* 底部按钮 */

.bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 99;
}

.bottom_nums {
  margin-left: 21rpx;
  font-size: 26rpx;
  color: #f20033;
}

.bottom_pay {
  width: 300rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  background-color: #ef0000;
}
