/*优惠劵*/
.fb{font-weight: bold;}
.juan-list{width: 90%;margin: 20rpx auto 0;align-items: stretch;background: #fff;}
.juan-msg{padding: 30rpx;position: relative;border-radius: 10rpx;align-self: center;}
.juan-msg::before{content:'';display:block;width:32rpx;height: 100%;background-image: radial-gradient(#f8f8f8 8rpx, transparent 0);background-size: 32rpx 32rpx;position: absolute;top: 0;left: -16rpx;}
.juan-msg .price{font-size:68rpx;color:var(--juan-color);line-height: 1.5;}
.juan-title{align-self: center;color: #555;}
.recive{background: var(--juan-color);color:#fff;padding: 40rpx 30rpx;border-radius: 10rpx;border-left: 3rpx dashed #fff;}
.recive .btn{background: #fff;color: var(--juan-color);border-radius: 40rpx;line-height: 56rpx;width: 150rpx;position: relative;border: 6rpx solid var(--juan-bcolor);}
.recive .btn:active{opacity: 0.8;}

.daijin{--juan-color: #ffb14b;--juan-bcolor:#ffd498;}
.zhekou{--juan-color: #ff7256;--juan-bcolor:#fd947f;}
.manjian{--juan-color: #5696ff;--juan-bcolor:#a2c5ff;}

/* 使用优惠券 */

.use-juan {
    background: #f8f8f8;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    max-height: 50vh;
    overflow-y:auto;
    -webkit-overflow-scrolling: touch; 
}

.not-use {
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    align-items: center;
    background: #fff;
}

.juan-items-box {
    padding: 0 30rpx;
    box-sizing: border-box;
    max-height: 380rpx;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.juan-item {
    background: #fff;
    padding: 30rpx;
    box-sizing: border-box;
    align-items: center;
    position: relative;
}

.juan-item::before {
    content: '';
    width: 8rpx;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    background: #ff7667;
}

.juan-item .price {
    color: #ff7667;
}

.juan-item .price-num {
    font-size: 64rpx;
    font-weight: bold;
}

.shop-name {
    font-weight: bold;
}

.tips-msg {
    line-height: 1.4;
}

page .wx-radio-input.wx-radio-input-checked {
    background: #ff7667 !important;
    border-color: #ff7667 !important;
}
