  <!--活动规则  -->
<view class='footBar'>
  <view class='footBarFloat'>
    <form bindsubmit='showrule' report-submit='true'>
      <button class='ruleBtn gridFour' form-type='submit'>
        <text class='iconfont icon-info mr5'></text>
        <text>活动规则</text>
      </button>
    </form> 

    <!--分享按钮  -->
    <form bindsubmit='onShareAppMessage' report-submit='true'>
      <button class='ruleBtn gridFour' form-type='submit' open-type='share'>
        <text class='iconfont icon-share mr5'></text>
        <text>分享给好友</text>
      </button>
    </form> 
  </view>
</view>