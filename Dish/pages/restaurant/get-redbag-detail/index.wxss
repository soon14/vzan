/* pages/restaurant/get-redbag-detail/index.wxss */
page{ background:linear-gradient(#f41e0f,#ff571c); font-size: 32rpx;}
.get-detail{ overflow: hidden; padding: 30rpx; position: absolute; width: 100%; height: 100%; overflow-y: auto; -webkit-overflow-scrolling: touch;}
.get-detail .box{ background: #fff; padding:40rpx 30rpx; position: relative;}
.get-detail .box:first-child{ border-top-left-radius: 12rpx; border-top-right-radius: 12rpx;}
.get-detail .box:last-child{ border-bottom-left-radius: 12rpx; border-bottom-right-radius: 12rpx;}
.get-detail .box:nth-child(n+2){ border-top: 1px dashed #ccc;}
.get-detail .box:nth-child(n+2)::after,.get-detail .box:nth-child(n+2)::before{ position: absolute; content: ""; width: 9px; height: 9px; background: #f93715; top:-5px; border-radius: 10px; }
.get-detail .box:nth-child(n+2)::after{ left: -5px;}
.get-detail .box:nth-child(n+2)::before{ right: -5px;}
.get-detail .tit{ font-weight: bold; color: #ff571c;}
.get-detail .con view{ margin-top: 16rpx;}
.num{ font-size: 68rpx; color: #ff571c; margin-top: 30rpx; margin-bottom: 10rpx;}

.btn{ padding: 0 20%; margin-top: 30rpx;}
.btn button{ width: 100%; height: 80rpx; line-height: 80rpx; border-radius: 100px; background: #ffae00; letter-spacing: 1px; font-weight: bold; color: #fff; margin-bottom: 10rpx;}
.btn button::after{ display:none;}
.btn button.to-use{ background: #ffe4a5; color: #ff571c;}
.btn button.no{ background: #ccc; color: #fff;}