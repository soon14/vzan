.payModeBox {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1000;
  overflow: hidden;
  font-size: 32rpx;
  color: #333;
}

.payModeBg {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1001;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.payModeModal {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1002;
  padding: 40rpx;
  background-color: #fff;
}

.modalHead {
  text-align: center;
  margin-bottom: 30rpx;
  color: #f66;
}

.headTip {
  margin-bottom: 10rpx;
  color: #888;
}

.cost {
  font-size: 44rpx;
  font-weight: 600;
}

.radioGroup {
  display: block;
  margin-bottom: 40rpx;
}

.radioCell {
  display: flex;
  position: relative;
  z-index: 1003;
  padding: 26rpx 0;
}

.radioCell:active {
  background-color: rgba(0, 0, 0, 0.03);
}

.radioCell::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background-color: #ececec;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
}

.radioCell:last-child:after {
  height: 0;
}

radio {
  margin-right: 10rpx;
  -webkit-transform: scale(0.9, 0.9) translateY(-2rpx);
  transform: scale(0.9, 0.9) translateY(-2rpx);
}

.cardVal {
  float: right;
  margin-top: -4rpx;
}

.ramainTit {
  color: #888;
  margin-right: 6rpx;
}
.c888{color: #888}.dc{display: flex;align-items: center;}
.carValIcon {
  /* color: #f66; */
  font-size: 24rpx;
}

.carValCount {
  font-size: 36rpx;
  /* font-weight: 600; */
  /* color: #f66; */
}

.confirmBtn {
  width: 100%;
  color: #fff;
  background-color: #09bb07;
}

.confirmBtn::after {
  border: 0;
}

.confirmBtn:active {
  opacity: 0.85;
}

.radioCell.notEnough .cardVal {
  font-size: 30rpx;
}

.radioCell.notEnough  .carValCount {
  font-size: 30rpx;
  font-weight: normal;
}

.radioCell.notEnough radio {
  visibility: hidden;
}

.radioCell.notEnough .cardPay {
  color: #999;
  text-decoration: line-through;
}

.radioCell.notEnough:active {
  background-color: #fff;
}

