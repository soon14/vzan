  background-color: #fff;
  line-height: 60rpx;
}

.btn::after {
  border: 0;
}

.cancelBtn {
  color: #888;
}

.cancelBtn:active {
  color: #fff;
  background-color: #888;
}

.conAgainBtn {
  color: #09bb07;
}

.conAgainBtn:active {
  color: #fff;
  background-color: #09bb07;
}

.bounce {
  animation: bounce 500ms ease-in-out forwards;
}

@keyframes bounce {
  0% {
    transform: translateY(100%);
  }

  100% {
    transform: translateY(0%);
  }
}


