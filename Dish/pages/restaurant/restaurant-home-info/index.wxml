  <!--详细列表-->
  <view class="detail f16 mt10">
    <view class="list gridXb flex">
      <text class="iconfont icon-shop f20 grey"></text>
      <view class="sub ml10">{{this_dish_info.dish_info.dish_name}}</view>
    </view>
    <view class="list gridXb flex" bindtap="get_location_bind">
      <text class="iconfont icon-location f20 grey"></text>
      <view class="sub ml10">{{this_dish_info.dish_info.dish_address}}</view>
    </view>
    <view class="list gridXb flex" bindtap="call_phone_bind">
      <text class="iconfont icon-phone f20 grey"></text>
      <view class="sub ml10">电话：{{this_dish_info.dish_info.dish_con_mobile}}</view>
    </view>
    <view class="list gridXb flex">
      <text class="iconfont icon-time f20 grey"></text>
      <view class="sub ml10">营业时间：店内 {{this_dish_info.dish_info.dish_yingye_time_text_diannei}} 外卖 {{this_dish_info.dish_info.dish_yingye_time_text_waimai}} </view>
    </view>
  </view>
  <!--商家环境-->
  <view class="environment mb10" wx:if="{{this_dish_info.dish_info.dish_shijing}}">
    <view class="title">商家环境</view>
    <view class="pho-content">
      <block wx:for="{{this_dish_info.dish_info.dish_shijing}}" wx:for-item="sj_idx">
        <image class="mr10 mt10" src="{{sj_idx}}" bindtap="img_max_bind" data-url="{{sj_idx}}" mode="aspectFill"></image>
      </block>
    </view>
  </view>
  <!--商家资质-->
  <view class="environment mb10" wx:if="{{this_dish_info.dish_info.dish_zizhi}}">
    <view class="title">商家资质</view>
    <view class="pho-content">
      <block wx:for="{{this_dish_info.dish_info.dish_zizhi}}" wx:for-item="zz_idx">
        <image class="mr10 mt10" src="{{zz_idx}}" bindtap="img_max_bind_zz" data-url="{{sj_idx}}" mode="aspectFill"></image>
      </block>
    </view>
  </view>
  <view class="go_home tc write" bindtap="go_dish_index_bind" data-url="/pages/restaurant/restaurant-home/index" wx:if="{{cPagelength!=1}}">
    <text class="f18 iconfont icon-homefill"></text>
  </view>
  <view class="go_home new_go_home tc write" bindtap="go_dish_index_bind" data-url="/pages/user/user_index/index" wx:if="{{cPagelength==1}}">
    <image src='/images/tabbar/DuoguanDish-template-orange/user_in.png' class='new_go_homeicon'></image>
  </view>

  <button class='btn s_btn' bindtap='share_card' data-Logo="{{this_dish_info.dish_info.dish_logo}}" data-Name="{{this_dish_info.dish_info.dish_name}}" data-Score="{{this_dish_info.dish_comment_fenshu}}" data-Price="{{this_dish_info.dish_info.dish_pingjunxiaofei}}"
    data-Code="{{this_dish_info.dish_info.storeHome_qrcode}}" data-Labels="{{this_dish_info.dish_info.dish_fuwuList}}">
    <text class='dzicon icon-Forward_fenxiang'></text>
  </button>
</block>


<view class='share_bg' wx:if="{{showShareCard}}"></view>
<view class='canvas fc' wx:if="{{showShareCard}}">
  <canvas class='c_part' canvas-id="shareCard"></canvas>
  <view class='c_bottom'>
    <block wx:for="{{shareArray}}">
      <view class='c_item' id="{{index}}" bindtap='doSomething'>
        <button class="btn c_btn" style="background-color:{{item.bgcolor}}" open-type="{{index==2?'share':''}}">
          <text class="dzicon {{item.font}}"></text>
        </button>
        <text class='c666 f26'>{{item.content}}</text>
      </view>
    </block>
  </view>
  <text class='c-cancel dzicon icon-zhuanyebaniconkuozhan_Close' bindtap='unshowShareCard'></text>
</view>