/* 字体图标 */
@import "/pages/restaurant/common/common.wxss";

/* 转账 */
.eatpay{font-size: 12px; line-height: 24px;height: 24px;padding: 0 14px; color: #fff;}
/* 会员卡 */
.res-rceive-btn{width: 460rpx;height: 78rpx;line-height: 78rpx;font-size: 28rpx;margin-bottom: 40rpx;}
.res-card-box{background: rgba(0, 0, 0, 0.1);color: #fff;position: relative;z-index: 1;}
.res-card-items{line-height: 110%;padding: 26rpx 0 20rpx;transition: all 0.3s linear;}
.res-card-items:active{background: rgba(0, 0, 0, 0.1);}
.res-card-items .iconfont{font-size: 44rpx;opacity: 0.8;margin-bottom: 20rpx;}
/* 会员卡弹框 */
.res-rceive-box{z-index: 10;}
.res-rceive-card{width: 620rpx;background: #fff;padding: 40rpx;border-radius: 12rpx;z-index: 2;}
.res-rceive-inp{width:100%;height: 86rpx;padding: 0 20rpx;}
.get-code-box{align-items: center;}
.get-code-box>.gridXb{overflow: visible;}
.get-code{background: #fff;line-height: 68rpx;height: 68rpx;font-size: 28rpx;}
 .rceive-card-btn{margin-top: 60rpx;margin-bottom: 20rpx;}

.orderNew{ background: #fff; padding: 40rpx 0;}
.orderNew button{ letter-spacing: 1px;}
.orderNew button.button-hover{ opacity: 0.8;}
.orderNew text{ display: inline-block;}
.orderNew button::after{ display: none;}
.orderNew form:not(:first-child) .onBtn{text-align: left; padding:0 60rpx 0 40rpx; background: #fff;color: #333;border-radius: 0;}
.orderNew form:not(:first-child) .onBtn.button-hover{ background: #eee; opacity:1; color: inherit;} 
.orderNew .onBtn .iconfont{ transform: scale(1.3); margin-right: 20rpx; transform-origin: left center;}
.orderNew .icon-waimai{color: #ffbf33;}
.orderNew .icon-yuding{color: #2ccb89;}
.orderNew .icon-ziqu{color: #2cabcb;}
.orderNew .icon-paiduiquhao{color: #f17650;}
.orderNew .onBtn::before{ right: 40rpx;}
.orderNew .gridFourRadio{ font-size: 12px; transform: scale(0.8); color: #f17650; margin-top: 11px; line-height: 24px; padding: 0 20rpx; vertical-align:top;}
.orderNew .gridFourRadio::before{ border-color: #f17650;}
.orderNew .onTxt{ min-width:200rpx;}

.orderNew form:first-child button{text-align:center;line-height: 2.6; margin: 0 40rpx 30rpx 40rpx;}
.orderNew form:first-child button::before{ display: none;}
.orderNew form:first-child button .iconfont{ color: #fff; transform: scale(1);}
.orderNew form:first-child button .gridFourRadio{ display: none;}
/* .orderNew button:only-child.button-hover,.orderNew button:first-child.button-hover{ background:#09bb07; color: #fff; opacity: 0.8; } */
.orderNew button:only-child .onTxt,.orderNew button:first-child .onTxt{ min-width: auto;}

.swiper-box{ position: absolute; left: 0; top: 0; width: 100%; height: 100%;}

.swiper{ width: 100%; position: relative; padding-bottom: 50%;}
.swiper-img{ width: 100%; height: 100%;}
page .wx-swiper-dot{content:'';  width: 14rpx; height: 14rpx; border-radius: 50rpx;}
page .wx-swiper-dot:nth-child(n){ margin-right: 10rpx;}
page .wx-swiper-dots.wx-swiper-dots-horizontal{ bottom: 0; overflow: visible; font-size: 0; padding:0 2rpx;}

.search{ position:fixed; left: 0; top: 0; padding: 16rpx 0; width: 100%; z-index: 9; background: -webkit-linear-gradient(top,rgba(0,0,0,.7),rgba(0,0,0,0)); background: linear-gradient(top,rgba(0,0,0,.7),rgba(0,0,0,0));}
.search-box{ background:#fff; border-radius: 100rpx; width: 100%; opacity: 0.9;}
.search-input{ height: 64rpx; padding: 0 20rpx; text-align: center; vertical-align: top;}
button.search-btn{ background: none; padding:0 0.8em;}
button.search-btn icon{ vertical-align: top; margin-top: 15rpx;}
.search-btn::after{ display: none;}
.icon-saoyisao,.icon-mark{ width: 100rpx; text-align: center; line-height: 64rpx; color: #fff; font-size: 48rpx; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);}
.search-active .search-box{ opacity: 1;}
.contact-button{background: none;margin:0;padding:0;font-size:0;width:100rpx;}
.contact-button::after{ display: none;}

.res-header{height:92rpx}
.res-filter{line-height:92rpx;background:#fff;left:0;top:0;width:100%;z-index:99}
.filter-item,.filter-item-active{position:relative}
.filter-item-active::before,.filter-item::before{right:10rpx}

.filter-sub{top:92rpx;z-index:98}
.filter-sub-item{background:#fff}
.filter-sub-item .arrowR{padding:20rpx 0 20rpx 40rpx;display:block;position:relative}
.filter-sub-item .arrowR:active{background:rgba(0,0,0,.05)}
.res-item{background:#fff;margin-top:15rpx;padding:20rpx 20rpx}
.res-thumb{width:160rpx;height:120rpx;position:relative;margin-right:20rpx}
.res-thumb-img{position:absolute;left:0;top:0;width:100%;height:100%}
.res-con{line-height:40rpx;margin-right:20rpx}
page{height:100%}
.ress-h{height:100%;text-align:center;background:#000;position:relative;overflow:hidden;display:-webkit-box;-webkit-box-align:center;color:#fff}
.ress-box{position:absolute;left:0;top:0;width:100%;height:100%}
.ress-bg{width:100%;height:100%;-webkit-filter:blur(18rpx);filter:blur(18rpx);opacity:.6}
.ress-h-i{position:relative;z-index:1;padding:0 10%;width:100%}
.ress-h-a{width:200rpx;height:200rpx;display:inline-block;border:8rpx solid #fff;border-radius:50%;position:relative}
.ress-h-av{width:100%;height:100%;border-radius:50%}
.ress-btn-box{margin:80rpx 15% 0;border-radius:100rpx}
.ress-btn-box::after{border-radius:100rpx}
.ress-box{-webkit-animation:ibg linear 30s infinite;animation:ibg linear 30s infinite;-webkit-transform:scale(1.1);transform:scale(1.1)}
@-webkit-keyframes ibg{0%{-webkit-transform:scale(1.1)}
50%{-webkit-transform:scale(2)}
100%{-webkit-transform:scale(1.1)}
}
@keyframes ibg{0%{transform:scale(1.1)}
50%{transform:scale(2)}
100%{transform:scale(1.1)}
}
.top-msg{line-height:1.5;position:relative;background:#000;overflow:hidden}
.topbg{width:100%;height:100%;position:absolute;-webkit-filter:blur(16rpx);opacity:.7;transform:scale(1.2,1.2)}
.top-content{position:relative;z-index:33;padding:50rpx 30rpx}
.logo-img{width:120rpx;height:120rpx;}
.logo-img image{width:100%;height:100%;border-radius:50%; float: left; transform: scale(0.8); box-shadow: 0 0 0 6rpx #fff;}
.top-msg .name{font-weight:700;line-height:46rpx}
.other-msg text{padding:6rpx 12rpx;background:#09bb07;border-radius:20rpx}
.order{background:#fff;padding:30rpx 0}
.order-item{ width: 120rpx; height: 120rpx; color: #fff; font-weight: bold; line-height: 120rpx; border-radius: 50%; display: inline-block; font-size: 32rpx;}

.order .sub:active{ opacity: 0.8;}
.order .sub .order-item.false{ background: #ccc;}



.detail{padding:0 30rpx;background:#fff;line-height:40rpx}
.list{padding:26rpx 0}
.environment{padding:30rpx;background:#fff;margin-top:20rpx}
.pho-content image{width:217rpx;height:160rpx}
.pho-content image:nth-child(3n+3){margin-right:0}

.res-count{padding-bottom: 20rpx;}
.juan-list{padding: 4rpx 30rpx 4rpx 0;line-height: 1.5;}
.redbg,.greenbg,.orangebg,.greybg{padding: 2rpx 8rpx;border-radius: 3rpx; font-size: 24rpx;}
.redbg{background: #ea4e52;}
.greenbg{background: #09bb07;}
.orangebg{background: #ff9d2b;}
.greybg{background: #ccc;}


/*入驻按钮*/
.ruzhu{width: 40px;height: 40px;line-height: 40px;font-size: 14px;border-radius: 50%;position: fixed;bottom: 20rpx;right: 20rpx;}
.formid_btn,.formid_btn::after{border:none;background: none;}
/*分类*/
.classify-box{padding:15rpx 0;}
.classify-list {width:20%; float: left;}
.classify-list:nth-child(n+6){ margin-top: 20rpx;}
.classify-list .list-img {display: inline-block;width: 90rpx;height: 90rpx;vertical-align: top; border-radius: 50%;margin-bottom: 8rpx;}
image{width:100%;height: 100%;}
.classify-list:active {-webkit-filter: brightness(0.8);filter: brightness(0.8);}

.order .sub:nth-child(1) .order-item{ background: #ffc341;}
.order .sub:nth-child(2) .order-item{ background: #09bb07;}
.order .sub:nth-child(3) .order-item{ background: #52dddb;}
.order .sub:nth-child(4) .order-item{ background: #a652ee;}

.get-btn{ padding: 30rpx 0;background: #ffecdc;}
.get-pop{ z-index: 99;}
.get-box{ background: #ff571c url("http://www.ixiaochengxu.cc/resource/images/dish/activity/layer-head.jpg") center top no-repeat; background-size: 100% auto; border-radius: 12rpx; width: 620rpx; padding-top: 240rpx;}
.get-box .close{ position: absolute; top: 0; right: 0; line-height: 80rpx; font-size: 44rpx; width: 80rpx; display: block;text-align: center; color: rgba(0, 0, 0, 0.6); font-weight: bold;}
.get-list{ padding:0 30rpx;}
.get-items{background: #fff; border-radius: 12rpx; margin-bottom: 20rpx; box-shadow: 1px 3px 5px rgba(0, 0, 0, 0.05); position: relative;}
.get-items::after,.get-items::before{ content: ""; display: block; position: absolute; left: 154rpx; width: 12rpx; height: 12rpx; background: #ff571c; border-radius: 50%;}
.get-items::after{ bottom: -6rpx;}
.get-items::before{ top: -6rpx;}
.get-count{ width: 160rpx; border-radius: 12rpx 0 0 12rpx; font-style: italic; color: #ff571c; background: #ffe4a4; display: flex; justify-content: center; align-items: center;}
.get-count .num{ font-size: 60rpx;}
.get-info{ padding: 20rpx 30rpx;}
.get-enter{ padding: 20rpx 100rpx 50rpx 100rpx;}
.get-enter button{ border-radius: 100px; background: linear-gradient(#fee97a,#fed251); color: #ff571c; font-weight: bold;}
.get-enter button::after{ display: none;}
.get-enter button:active{ background: linear-gradient(#fff,#fee97a);}
.quan_show{display: block;}
.quan_hidden{display: none;}

