/* pages/restaurant/restaurant-refund-detail/index.wxss */
@import "/pages/restaurant/common/common.wxss";

.goods-info{background: #fff;padding: 20rpx 30rpx;}

.refund-tit{padding: 20rpx 30rpx;background: #fff;}
.refund-item{padding:20rpx 30rpx 40rpx 80rpx;background: #fff;position: relative;overflow: visible;}

.refund-item:not(:last-child)::before{content: '';width: 1px;height:100%;background: var(--mColor);position: absolute;left: 40rpx;top: 46rpx;z-index: 1;}

.refunds-tips{color: #666;font-size: 28rpx;margin-top: 10rpx;}
.refunds-reasons{font-weight: bold;color: #444;}
.refunds-time{color: #888;font-size: 28rpx;}

.refund-item-tit{color: var(--mColor);position: relative;}
.refund-item-tit::before,.refund-item:first-child .refund-item-tit::after{content: '';display: block;width: 20rpx;height: 20rpx;border-radius: 50%;background: currentColor;position: absolute;left: -48rpx;top: 50%;transform: translateY(-50%);z-index: 1;}
.refund-item:first-child .refund-item-tit::after{transform: translateY(-50%) scale(2);opacity: 0.2;}
.refund-item:first-child .refund-item-tit{font-weight: bold;}


