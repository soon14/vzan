/* pages/distribution/index.wxss */

page{font-size: 32rpx;}

.apply-state-box{background: #66627b;color: #fff;padding: 40rpx;display: flex;justify-content: space-between;align-items: center;}
.apply-state-tit{font-weight: bold;font-size: 36rpx;}
.dec-cont{padding:20rpx;background: #fff;}


.bottom-fiexd{height: 92rpx;}
.apply-btn{border-radius: 0;position: fixed;bottom: 0;left: 0;right: 0;background: #312e43;color: #fff;}
.apply-btn:active{background: #312e43;}
.apply-btn:after{border: none;}

.apply-pup{z-index: 2;}
.pop-cont{width: 600rpx;padding:60rpx;background: #fff;border-radius: 10rpx;z-index: 1;overflow: hidden;}
.recharge-colse{position: absolute;right: 0;top: 0;background: #312e43;width: 78rpx;height: 78rpx;border-bottom-left-radius: 80%;}
.recharge-colse::before,.recharge-colse::after{content:'';display: block;width: 50%;height: 1px;background: #fff;position: absolute;right: 20%;top: 45%;transform: rotate(45deg);}
.recharge-colse::after{transform: rotate(-45deg);}
.recharge-colse:active{opacity: 0.8;}
.pop-tel-inp,.pop-check-box{margin-top: 30rpx;}
.pop-tel-inp,.pop-tel-check{height: 72rpx;padding: 0 30rpx;border: 1px solid #ddd;border-radius: 6rpx;font-size: 14px;}
.get-code{display: inline-block;background: #312e43;color:#fff;font-size: 28rpx;border-radius: 6rpx;}
.get-code:active,.pop-sure-btn:active{opacity: 0.8;}
.get-code::after{border: none;}
.apply-tips{font-size: 24rpx;color: #999;margin-top: 20rpx;text-align: center;}
.pop-sure-btn{background: #312e43;color:#fff;font-size: 32rpx;border-radius: 6rpx;margin-top: 30rpx;}
.pop-sure-btn::after{border: none;}


