.user-info {
    background-color: white;
    margin-bottom: 30rpx;
    padding-top: 90rpx;
    padding-bottom: 30rpx;
    -webkit-box-sizing: content-box;
    box-sizing: content-box;
}

.user-info .user-row {
    position: relative;
    display: table;
    width: 100%;
    table-layout: fixed;
}

.user-info .user-row .user-row-item {
    position: relative;
    display: table-cell;
    text-align: center;
    vertical-align: top;
    padding: 10rpx;
}

.user-info .user-row .user-row-item .title {
    display: block;
    font-weight: bold;
    color: #667;
}

.user-info .user-row .user-row-item .remark {
    display: block;
    color: #888;
}

.list {
    position: relative;
    background-color: white;
}

.list-item {
    position: relative;
    overflow: hidden;
    color: #334;
    font-size: 16px;
}

.list-item:active {
    background-color: rgba(0, 0, 0, 0.02);
}

.list-item::after {
    content: '';
    clear: both;
}

.list-item:not(:last-child)::after {
    position: absolute;
    left: 20rpx;
    right: 20rpx;
    bottom: 0;
    height: 1px;
    background-color: #ddd;
    -webkit-transform: scaleY(0.3);
    transform: scaleY(0.3);
}

.list-item .icon {
    display: block;
    width: 20px;
    height: 20px;
    float: left;
    margin: 30rpx;
    font-size: 24px;
    text-align: center;
}

.list-item .title {
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}

.right-arrow::after {
    font-family: "iconfont" !important;
    font-size: 12px;
    content: '\e60d';
    float: right;
    margin-right: 30rpx;
    color: #888;
}

.list-item .avatar {
    width: 48px;
    height: 48px;
    border-radius: 24px;
    background-color: #f0f0f0;
    float: left;
    margin: 10px;
}

.list-item .content {
    padding-top: 10px;
    padding-bottom: 10px;
    padding-left: 10px;
}

.list-item .avatar+.content {
    padding-left: 58px;
}

