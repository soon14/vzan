.loding .icon-jiazai {
    -webkit-animation: lodingRotate 1s linear infinite;
    -animation: lodingRotate 1s linear infinite;
    display: inline-block;
}

@-webkit-keyframes lodingRotate {
    0% {
        -webkit-transform: rotate(0deg);
    }

    100% {
        -webkit-transform: rotate(360deg);
    }
}

@keyframes lodingRotate {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.box {
    background-color: white;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    border-radius: 3px;
}

.box:first-child {
    margin-top: 30rpx;
}

.box, .box-header, .box-content, .box-footer {
    position: relative;
}

.box-content {
    padding: 0 30rpx;
}

.box-header, .box-footer {
    padding: 20rpx 30rpx;
}

.box-footer {
    color: #888;
    font-size: 12px;
}

.btn-row {
    margin: 30rpx;
}

.page {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: #f9f9f9;
}

.page .body, .page .footer {
    position: absolute;
    left: 0;
    right: 0;
}

.page .body {
    overflow-y: auto;
    bottom: 96rpx;
    top: 0;
}

.page .footer {
    background-color: #09bb07;
    bottom: 0;
    height: 96rpx;
    box-shadow: -1px 0 5px #09bb07;
    line-height: 96rpx;
    text-align: center;
    color: white;
}

.page .footer:active {
    background-color: #03b802;
}
