/* pages/user/member/pay-records/index.wxss */

page {
    font-size: 32rpx;
}

.card-money {
    padding: 60rpx 30rpx;
    text-align: center;
    line-height: 1.5;
    color: #fff;
    background-image: linear-gradient(#3c3e43, #4e525c);
}

.card-balance {
    font-size: 40rpx;
}

.card-balance-money {
    font-size: 50rpx;
    font-weight: bold;
}

.card-cum {
    margin-top: 40rpx;
    font-size: 28rpx;
}

button.submitBtn {
    height: 92rpx;
    line-height: 92rpx;
    background: #fff;
    border-radius: 0;
    position: relative;
}

.submitBtn::before {
    content: '';
    display: block;
    height: 3px;
    background: currentColor;
    border-radius: 6px;
    position: absolute;
    left: 30rpx;
    right: 30rpx;
    bottom: 0;
    transition: all 0.3s linear;
    opacity: 0;
}

.submitBtn.active {
    font-weight: bold;
    color: #3c3e43;
}

.submitBtn.active::before {
    left: 35%;
    right: 35%;
    opacity: 1;
}

.card-record {
    background: #fff;
    padding: 20rpx 30rpx;
}

.card-record-time {
    font-size: 26rpx;
    color: #999;
}

.card-record-moy {
    color: #f66;
    font-size: 36rpx;
}

.no-content-img {
    width: 50%;
}

button::after {
    border: 0;
}
