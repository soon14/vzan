/* pages/thumb/bindTel/bindTel.wxss */

page {
  background-color: #fff;
}

button::after {
  border: 0;
}

.topBox {
  display: flex;
  align-items: center;
  color: #09bb07;
  font-size: 32rpx;
  height: 120rpx;
  line-height: 120rpx;
  background-color: #f5f5f5;
  margin-bottom: 72rpx;
}

.topBox::before {
  width: 20rpx;
  height: 20rpx;
  border-width: 6rpx;
  border-color: currentColor currentColor transparent transparent;
}

.icon-wx-pay {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.topBox:active {
    background-color: rgba(0, 0, 0, 0.1) 
}

.main {
  margin:10rpx 30rpx 72rpx;
}

.main::before {
  border-color: #ccc;
}

.inpBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
}

.inpBox::before {
  background-color: #ccc;
}

.inp {
  flex: 1;
  padding:0 30rpx;
}

.getBtn {
  height: 66rpx;
  line-height: 66rpx;
  font-size: 28rpx;
  color: #f66;
  margin: 0 20rpx;
  border-radius: 4rpx;
}
.getBtn::before{
  border-color: currentColor;
}

.confirmBtn {
  margin: 0 30rpx;
  color: #fff;
  font-size: 34rpx;
  background-color: #09bb07;
  height: 92rpx;
  line-height: 92rpx;
}

.confirmBtn:active {
  opacity: 0.85;
}


/*弹窗  */
.tanBoc{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal{
  text-align: center;
  padding:30rpx 100rpx;
  border-radius: 20rpx;
  background-color: #fff;
}