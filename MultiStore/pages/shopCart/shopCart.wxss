/* pages/shopCart/shopCart.wxss */

.form-btn1 {
  height: 100rpx;
  position: relative;
}

.form-btn2 {
  height: 100rpx;
  border-radius: 0;
}

.form-btn3 {
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0;
}

.takePrice {
  position: absolute;
  bottom: -30rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
}

.choose-address {
  width: 100%;
  height: 113rpx;
}

.address-bf::before {
  content: "由";
  color: #999;
  margin-right: 10rpx;
}

.address-af::after {
  content: "配送";
  color: #999;
  margin-left: 10rpx;
}

.price-bf::before {
  content: "买";
  color: #fff;
  margin-right: 10rpx;
}

.price-af::after {
  content: "即可免运费";
  color: #fff4df;
  margin-left: 10rpx;
}

.no-shop {
  height: 60vh;
}

.no-shop>image {
  width: 550rpx;
  height: 250rpx;
}

.shop-item {
  height: 220rpx;
  border: 1rpx solid #f5f5f5;
}

.shop-item:first-child {
  margin-top: 0;
}

.shop-mainImg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.shop-content {
  width: 60%;
  height: 160rpx;
}

.editor-same {
  width: 118rpx;
  height: 78rpx;
  line-height: 78rpx;
  color: #666;
  background: #f3f3f3;
  text-align: center;
}

.editor-top >text {
  font-size: 44rpx;
}

.editor-top>input {
  font-size: 38rpx;
  border-right: 1rpx solid #fff;
  border-left: 1rpx solid #fff;
}

.bottomnav {
  position: fixed;
  bottom: 0;
}
