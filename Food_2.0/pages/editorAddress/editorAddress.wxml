  <view class='textarea'>
    <input placeholder="请输入详细地址" name="address" class="t32rpx w1005" value="{{getLocation}}" maxlength="100" placeholder-style="font-size:28rpx;color:#000" disabled='true' bindtap='chooseLocal' />
  </view>
  <view class="inputInfoadd">
    <text style="width:132rpx">补充说明</text>
    <input placeholder="详细地址（如门牌号等）" class="Address_input" placeholder-style='color:#999' bindinput='inputaddinfo' />
  </view>
  <!-- 删除 保存地址按钮 -->
