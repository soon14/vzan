/* pages/myOrder/myOrder.wxss */

/* 全部订单 待付款 待收货 已完成 */

page {
  font-family: PingFang SC;
}

.header {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  height: 100rpx;
  background-color: #f7f7f7;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.header_col {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-top: 32rpx;
  height: 68rpx;
  font-size: 30rpx;
}

.choose_bottom {
  width: 40rpx;
  height: 4rpx;
}

.header_txt_black {
  color: #121212;
}

.txt {
  color: #f20033;
}

/* condition0 */

.whencondition0 {
  position: relative;
}

.line0 {
  position: absolute;
  background-color: #ccc;
  left: 56rpx;
  height: 130rpx;
  width: 1rpx;
  top: 0;
}

.condition0 {
  margin-top: 30rpx;
  margin-left: 111rpx;
  width: 639rpx;
  background-color: white;
}

.condition0_top {
  position: relative;
  height: 182rpx;
  display: flex;
  justify-content: space-between;
  padding: 22rpx 24rpx 0 23rpx;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: center;
}

.line {
  position: absolute;
  background-color: #ccc;
  left: -56rpx;
  height: 279rpx;
  width: 1rpx;
  top: 176rpx;
}

.line1 {
  position: absolute;
  left: -88rpx;
  top: 138rpx;
  font-size: 24rpx;
  color: #666;
  height: 32rpx;
  line-height: 32rpx;
}

.condition0_top1 {
  letter-spacing: 2rpx;
  color: #121212;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 87rpx;
}

.img {
  height: 160rpx;
  width: 160rpx;
}

.condition0_bottom {
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  line-height: 90rpx;
  padding: 0 26rpx 0 22rpx;
}

.bottomdata {
  text-align: center;
  font-size: 30rpx;
  margin-top: 5px;
}

/* 购物详情列表 */

/* 订单号 */

.order_num {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  justify-content: space-between;
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order_num text:nth-child(1) {
  color: #999;
}

.order_num text:nth-child(2) {
  color: #f20033;
}

/* 产品详情 */

.order_list {
  display: flex;
  flex-direction: column;
}

.order_item {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.order_item image {
  width: 160rpx;
  height: 160rpx;
  padding: 40rpx 20rpx;
}

.order_content {
  width: 70%;
  display: flex;
  flex-direction: column;
  padding: 28rpx 0;
  justify-content: space-between;
}

.order_content_1 {
  font-size: 32rpx;
  color: #121212;
  margin-bottom: 14rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.order_content_2 {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 33rpx;
}

.order_down {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #f20033;
}

.order_price {
  font-size: 32rpx;
}

.order_price text:first-child {
  font-size: 20rpx;
}

.order_item_num {
  font-size: 28rpx;
}

/* <!-- 底部总计 --> */

.bottom_order {
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 0 20rpx;
  font-size: 28rpx;
  border-bottom: 44rpx solid #f7f7f7;
}

.bottom_price {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottom_price text:nth-child(1) {
  color: #666;
}

.bottom_price text:nth-child(1) {
  color: #f20033;
}

.bottom_btn {
  width: 140rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  color: #fff;
  background: #218cd7;
  font-size: 22rpx;
  border-radius: 8rpx;
}

/* 购物详情列表 */

.oreder-no {
  width: 100%;
  height: 100vh;
  font-size: 32rpx;
  color: #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}
