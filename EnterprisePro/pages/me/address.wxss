/* pages/me/address.wxss */
page{background-color: #f2f2f2;padding-top: 1rpx;padding-bottom: 180rpx;}
.spacing{margin-bottom: 15rpx;}
.fixed-line{border-top: 1rpx solid #d2d2d2;position: fixed;top: 0;width: 100%;left: 0;height: 1rpx;}
.itemlist{color:#191919;font-size: 26rpx;}
.dzicon{font-size: 26rpx!important; }
.dzicon::before{display: inline-block;vertical-align:middle;}
.dzicon text{display: inline-block;padding-left: 15rpx;font-size: 26rpx!important;}

.item-user{padding: 20rpx 30rpx;}
.item-addr{padding-top: 10rpx; line-height: 1.5;}
.item-action{border-top: 1rpx solid #eaeaea;color: #9d9d9d;padding: 20rpx 30rpx;}

.item-action .sel{color: #e02e24;}

.bottom-action{background-color: #f2f2f2;position: fixed;bottom: 0;left: 0;width: 100%;padding: 30rpx 60rpx;box-sizing: border-box;}
.bottom-btn{padding: 25rpx 0;  border-radius: 10rpx;text-align: center;color:#fff;font-size: 32rpx;}
.bottom-btn.addself{background-color:#e02e24 ;}
.bottom-btn.addwx{background-color: #08c303;}
.btn-saveaddr{width: 95%; margin-top: 20rpx; padding: 20rpx;background-color:#e02e24; color: #fff;border-radius: 10rpx;}
.btn-saveaddr.disabled{background-color: #F8F8F8;}
.pb-20{padding-bottom: 20rpx;}

/**/
.pop-mask{z-index: 3000;position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);}
.pop-dialog{
  position: fixed;
    z-index: 4000;
    width: 90%;
    max-width: 700rpx;
    top:40rpx;
    left: 50%;
    -webkit-transform: translate(-50%,0);
    transform:  translate(-50%,0);
    background-color: #FFFFFF;
    border-radius: 3px;

}
.pop-close{position: absolute;top:-20rpx;right: -20rpx;background-color: #999999;color: #fff; font-size: 40rpx!important; text-align: center;width: 50rpx;height:50rpx;line-height: 50rpx;overflow: hidden; border-radius: 100%; }

.w150{width: 150rpx;}
.pop-head{text-align: center;border-bottom: 1rpx solid #ededed;padding: 15rpx 0;}
.addr-info{padding: 0 20rpx;font-size: 14px;}
.addr-info-item{border-top: 1rpx solid #ededed;padding: 20rpx 0;}
.addr-info-item:first-child{border-top: 0;}
.dzicon.icon-address::before{font-size: 40rpx!important;}

.clickchoose{position: fixed;bottom: 0;left: 0;right: 0;background-color: #fff;}
.clickchoose .head{color: #666666;font-size: 28rpx;padding: 20rpx 0;}
.clickchoose .items{height: 400rpx;overflow-y: scroll;-webkit-overflow-scrolling: touch;box-sizing: border-box;padding: 0 20rpx; font-size: 28rpx;}
.clickchoose .items .item{border-bottom: 1rpx solid #ededed;padding: 20rpx 0;}
.clickchoose .items .addr-name{font-weight: bolder;color: #333333;}
.clickchoose .items .addr-des{color: #999999;padding-top: 10rpx;}
.dzicon.icon-jiantou{font-size: 24px!important;color: #9c9c9c;}

.clickState{background: #999999;}