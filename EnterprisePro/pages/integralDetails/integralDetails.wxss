.integral-swiper {
  height: 750rpx;  
}

.integral-swiper-image {
  height: 750rpx;
}

.integral-swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 2rpx;
}

.integral-swiper .wx-swiper-dot {
  width: 38rpx;
  display: inline-flex;
  height: 3rpx;
  margin-left: 10rpx;
  justify-content: space-between;
}

.integral-swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #bbb;
  border-radius: 8rpx;
}

.integral-swiper .wx-swiper-dot-active::before {
  background: rgba(0,0,0,0.9);
}

