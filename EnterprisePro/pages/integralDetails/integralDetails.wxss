}

.color999 {
  color: #999;
}

.middle-line {
  position: relative;
}

.middle-line::before {
  position: absolute;
  top: 50%;
  left: 30%;
  transform: translate(-50%, 0);
  content: "";
  width: 120rpx;
  height: 1rpx;
  background-color: #d9d9d9;
}

.middle-line::after {
  position: absolute;
  top: 50%;
  right: 14%;
  transform: translate(-50% , 0);
  content: "";
  width:120rpx;
  height:1rpx;
  background-color:#d9d9d9;  
}

