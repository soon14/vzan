/* pages/sellCenter/person.wxss */
@import "/template/template.wxss";

.person {
  width: 100%;
  height: 240rpx;
  padding: 45rpx 20rpx;
  color:#fff;
}

.person>image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right:18rpx;
}
.priceStr{
  width:100%;
  height:300rpx;
  background:#fff;
}
.person-btn{
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  background:#fff;
  border-top:1rpx solid #f3f3f3;
  padding:0 20rpx;
}
.person-count{
  width:100%;
  height: 180rpx;
  background: #fff;
  margin-top:20rpx;
}