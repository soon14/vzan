.toast-msg {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 20rpx 50rpx;
  border-radius: 10rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 24rpx;
  transition: all 1s ease-in-out;
  line-height: 1.6;
  white-space: nowrap;
  z-index: 901;
}

.toast-mask {
  z-index: 900;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.1);
  display: none;
}

